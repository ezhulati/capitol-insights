# TinaCMS Configuration
# Get these values from your Tina.io dashboard
TINA_PUBLIC_CLIENT_ID=your_client_id_here
TINA_TOKEN=your_token_here

# Netlify Environment Variables (if needed)
# NETLIFY_API_KEY=your_netlify_api_key_here

# Form Notification Recipients
# Comma-separated list of email addresses to receive form notifications
FORM_NOTIFICATION_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Email Marketing Integration (uncomment and fill as needed)
# Mailchimp
# MAILCHIMP_API_KEY=your_mailchimp_api_key_here
# MAILCHIMP_SERVER_PREFIX=us1
# MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Google Analytics
# Set to 'true' to anonymize IP addresses
ANALYTICS_ANONYMIZE_IP=true
# Set to 'false' to disable sending PII to Google Analytics
ANALYTICS_SEND_PII=false
