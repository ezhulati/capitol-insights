# NPM Configuration for Capitol Insights

# Force dependency resolution even with conflicts
legacy-peer-deps=true
force=true

# Increase network timeout for better reliability
network-timeout=60000

# Disable strict SSL for corporate environments
strict-ssl=false

# Save exact versions to avoid unexpected updates
save-exact=true

# Disable package-lock.json updates during install
package-lock=false

# Set registry to use npm
registry=https://registry.npmjs.org/

# Increase fetch retries for better reliability
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Disable progress bar for CI environments
progress=false

# Disable update notifier
update-notifier=false

# Increase log level for better debugging
loglevel=info